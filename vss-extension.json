{
    "manifestVersion": 1,
    "id": "Picker-Fields-Control",
    "version": "1.1.4",
    "name": "Picker Fields Control",
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "description": "Let Pick values for field from a specific list",
    "publisher": "AviHadad",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [{
        "id": "Microsoft.VisualStudio.Services"
    }],
    "tags": [
        "Work Item",
        "Work Item control",
        "Usability",
        "Picker",
        "List Values"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/avih75/PickerFieldsControl"
    },
    "links": {
        "repository": {
            "uri": "https://github.com/avih75/PickerFieldsControl"
        }
    },
    "files": [{
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "styles",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "action.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [{
            "id": "Picker_Fields_Control",
            "description": "Group values from several fields, and calculate new value. regarding the requested functionality",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Picker Fields with dependencies",
                "uri": "index.html",
                "height": 200,
                "inputs": [{
                        "id": "CanEdit",
                        "name": "CanEdit",
                        "description": "This field get the controll name, use for label and getting the infos from storage",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "Boolean",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "ControlName",
                        "name": "ControlName",
                        "description": "This field get the controll name, use for label and getting the infos from storage",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "FieldName1",
                        "name": "FieldName1",
                        "description": "The first field name",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "Field1",
                        "name": "Field1",
                        "description": "The first field workItem Field",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "FieldName2",
                        "name": "FieldName2",
                        "description": "The second field name",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "Field2",
                        "name": "Field2",
                        "description": "The second field workItem Field",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "FieldName3",
                        "name": "FieldName3",
                        "description": "The therd field name",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "Field3",
                        "name": "Field3",
                        "description": "The therd field workItem Field",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "FieldName4",
                        "name": "FieldName4",
                        "description": "The forth field name",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "Field4",
                        "name": "Field4",
                        "description": "The forth field workItem Field",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }
                ]
            }
        },
        {
            "id": "myAction",
            "description": "Run in Hello hub action",
            "type": "ms.vss-web.action",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Upload Dependencies",
                "title": "Upload Excell Dependencies file",
                "icon": "img/icon.png",
                "groupId": "actions",
                "uri": "action.html"
            }
        }
    ]
}